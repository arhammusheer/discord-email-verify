<div class="container mt-4">
  {{#if alert}}
  <div class="alert alert-danger" role="alert">
    {{alert}}
  </div>
  {{/if}}
  <div class="row justify-content-between">
    <div class="h2 font-weight-bold">
      Hi
      {{User.username}}
    </div>
    <div>
      <a
        href="/logout"
        class="btn font-weight-bold text-white"
        style="background-color: #7289da;"
      >
        Logout
      </a>
    </div>
  </div>
  <div class="row w-100 h-100">
    {{#if User.umassEmail}}
      {{#if User.umassVerified}}  
        <div class="row p-4">
          <img src="/images/verified-green.webp" style="height:3rem;" />
          <div class="h2 text-success font-weight-bold">
            Congratulations, You're verified
          </div>
          <p>
            If you still do not have a verified role, contact a moderator to get it fixed.
          </p>
        </div>
      {{else}}
        <div class="row p-4">
          <a href="/u/send-email" class="h4 text-primary">
            Click here to verify {{User.umassEmail}}
          </a>
        </div>
      {{/if}}
    {{else}}
  <form action="/u/update-email" method="POST">
    <div class="form-group">
      <label for="#umassEmailInput">UMass Email address</label>
      <input type="email" class="form-control" id="umassEmailInput" name="umassEmail" aria-describedby="emailHelp" required>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      <button type="submit" class="btn btn-primary" id="emailSubmit">Submit</button>
    </div>
    {{/if}}
  </div>
  {{#if User.isAdmin}}
    <div class="row">
      <div class="row p-4">
        <a href="/u/admin" class="btn btn-primary btn-lg">
          Open Admin console
        </a>
      </div>
    </div>
  {{/if}}
</div>    